#!/bin/bash
# Pre-push hook for Kokoro TTS
# Runs the full test suite before allowing push
#
# To bypass this hook (emergencies only):
#   git push --no-verify

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${BLUE}  Pre-Push Tests - Kokoro TTS${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

# Check if pytest is installed
if ! python3 -c "import pytest" 2>/dev/null; then
    echo -e "${YELLOW}⚠️  Warning: pytest not found${NC}"
    echo "Installing test dependencies..."
    pip install pytest pytest-cov pytest-mock
fi

# Run tests
echo -e "${BLUE}Running test suite...${NC}"
echo ""

if python3 -m pytest tests/ -v --tb=short; then
    echo ""
    echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${GREEN}  ✅ All tests passed! Push proceeding...${NC}"
    echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${RED}  ❌ Tests failed! Push blocked.${NC}"
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    echo -e "${YELLOW}Fix the failing tests before pushing.${NC}"
    echo ""
    echo -e "${YELLOW}To bypass this hook (emergencies only):${NC}"
    echo -e "  ${YELLOW}git push --no-verify${NC}"
    echo ""
    exit 1
fi
