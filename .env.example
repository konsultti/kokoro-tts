# Kokoro TTS Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================
# Performance Settings
# ============================================

# Enable parallel chunk processing (3-8x speedup on multi-core systems)
# Options: true, false
KOKORO_USE_PARALLEL=false

# Maximum worker threads for parallel processing
# Set to number of CPU cores minus 1 for best performance
# Leave empty for auto-detection
KOKORO_MAX_WORKERS=

# Enable asynchronous file I/O (experimental)
# Options: true, false
KOKORO_ASYNC_IO=false

# Maximum queued I/O operations
KOKORO_IO_QUEUE_SIZE=10

# Enable memory-efficient streaming (experimental)
# Options: true, false
KOKORO_MEMORY_STREAMING=false

# ============================================
# GPU Settings
# ============================================

# GPU provider for ONNX runtime
# Options: TensorrtExecutionProvider, CUDAExecutionProvider, ROCMExecutionProvider, CoreMLExecutionProvider
# Leave empty for CPU or use --gpu flag in CLI
ONNX_PROVIDER=

# Enable GPU batch processing (Phase 3, experimental)
# Options: true, false
KOKORO_GPU_BATCHING=false

# GPU batch size for processing
KOKORO_GPU_BATCH_SIZE=4

# ============================================
# Development Settings
# ============================================

# Enable debug logging
# Options: true, false
DEBUG=false
